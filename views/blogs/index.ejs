<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>

    <body>
        <%- include('../partials/nav.ejs')%>
            <div class="blogs content">

            <% if (blogs.length> 0) {%>
            <% blogs.forEach(blog=> {%>
                <a href="blogs/<%=blog.id%>">
                    <div class="blog-link">
                        <h3 class="title">
                            <%= blog.title %>
                        </h3>
                        <p class="snippet">
                            <%= blog.snippet%>
                        </p>
                    </div>
                </a>
            <%})%>
            <%} else {%>
                <p class="no-entries"> There are no entries to display.</p>
            <%}%>
            </div>
            <%- include('../partials/footer.ejs')%>
    </body>

</html>

